/* MMM-MovingPortrait Example Configurations
 * 
 * Copy the configuration you want to use into your config/config.js file
 * Make sure to adjust the file paths to match your video filenames
 */

// ============================================
// EXAMPLE 1: Single Wizard Portrait
// ============================================
{
    module: "MMM-MovingPortrait",
    position: "middle_center",
    config: {
        portraits: [
            { file: "dumbledore.mp4", name: "Albus Dumbledore" }
        ],
        width: "400px",
        height: "600px",
        frameStyle: "hogwarts",
        opacity: 0.85,
        softEdges: true
    }
}

// ============================================
// EXAMPLE 2: Rotating Hogwarts Professors
// ============================================
{
    module: "MMM-MovingPortrait",
    position: "top_left",
    config: {
        portraits: [
            { file: "dumbledore.mp4", name: "Albus Dumbledore" },
            { file: "mcgonagall.mp4", name: "Minerva McGonagall" },
            { file: "snape.mp4", name: "Severus Snape" },
            { file: "sprout.mp4", name: "Pomona Sprout" }
        ],
        width: "350px",
        height: "525px",
        frameStyle: "hogwarts",
        rotationInterval: 25000,  // Change every 25 seconds
        fadeTransitionDuration: 2500,  // 2.5 second fade
        showName: true,
        namePosition: "bottom",
        opacity: 0.9,
        softEdges: true
    }
}

